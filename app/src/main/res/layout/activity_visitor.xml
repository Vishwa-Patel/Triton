<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visitor">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="216dp">

            <ImageView
                android:id="@+id/imageView4visitor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="123dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.077"
                app:srcCompat="@drawable/visitordetails" />

            <TextView
                android:id="@+id/titlevisitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="164dp"
                android:layout_marginEnd="113dp"
                android:text="Visitor Details"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"  />

        </RelativeLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="67dp"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:orientation="horizontal">

<TextView
    android:id="@+id/txtvisitor_name"
    android:layout_width="108dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textColor="#000000"
    android:textSize="18sp"
    android:text="Name" />

<EditText
    android:id="@+id/edtvisitor_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:ems="10"
    android:hint="Enter your Name"
    android:inputType="text" />


</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="67dp"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"

android:orientation="horizontal">

    <TextView
        android:id="@+id/txtvisitor_contactno"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Contact No"
        android:textColor="#000000"
        android:textSize="18sp" />

<EditText
    android:id="@+id/edtvisitor_contactno"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:ems="10"
    android:hint="Enter your Contact No"
    android:inputType="number" />

</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="67dp"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:orientation="horizontal">

<TextView
    android:id="@+id/txtvisitor_residentno"

    android:layout_width="108dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textColor="#000000"
    android:textSize="18sp"
    android:text="Resident No" />

<EditText
    android:id="@+id/edtvisitor_residentno"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:ems="10"
    android:hint="Enter your Residentno"
    android:inputType="text" />

</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="67dp"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:orientation="horizontal">

    <TextView
        android:id="@+id/txtvisitor_relation"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Relation" />

    <EditText
        android:id="@+id/edtvisitor_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Enter Relation with member"
        android:inputType="text" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttime"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="Entry Time" />

        <EditText
            android:id="@+id/edtvisitor_entrytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="time"
            android:hint="Enter the entry time"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtendtime"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Exit Time" />

        <EditText
            android:id="@+id/edtvisitor_exittime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="time"
            android:hint="Enter the exit time"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Details" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

